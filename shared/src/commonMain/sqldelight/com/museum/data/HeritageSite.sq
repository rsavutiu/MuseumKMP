CREATE TABLE IF NOT EXISTS museum_item (
    style_zh TEXT,
    style_ja TEXT,
    paintingname_ja TEXT,
    description_ja TEXT,
    paintingname_zh TEXT,
    description_zh TEXT,
    id INTEGER PRIMARY KEY,
    paintingname TEXT NOT NULL,
    author TEXT,
    description TEXT,
    location TEXT,
    style TEXT,
    description_ro TEXT,
    paintingname_ro TEXT,
    full_image_uri TEXT,
    description_es TEXT,
    paintingname_es TEXT,
    description_de TEXT,
    paintingname_de TEXT,
    description_fr TEXT,
    paintingname_fr TEXT,
    description_it TEXT,
    paintingname_it TEXT,
    description_ru TEXT,
    paintingname_ru TEXT,
    description_pt TEXT,
    paintingname_pt TEXT,
    prim_color INTEGER,
    sec_color INTEGER,
    detail_color INTEGER,
    background_color INTEGER,
    style_de TEXT,
    style_it TEXT,
    style_es TEXT,
    style_pt TEXT,
    style_fr TEXT,
    style_ro TEXT,
    style_ru TEXT,
    paintingname_ar TEXT,
    description_ar TEXT,
    style_ar TEXT,
    isFavourite TEXT DEFAULT "false",
    viewed TEXT DEFAULT "false",
    visited TEXT DEFAULT "false"
);

CREATE INDEX heritage_site_favorite_idx ON museum_item(isFavourite);
CREATE INDEX heritage_site_location_idx ON museum_item(location);

selectAll:
SELECT * FROM museum_item;

selectById:
SELECT * FROM museum_item WHERE id = ?;

selectFavorites:
SELECT * FROM museum_item WHERE isFavourite = "true";

searchByName:
SELECT museum_item.* FROM museum_item
LEFT JOIN authors ON museum_item.author = authors.name
WHERE museum_item.paintingname LIKE '%' || ? || '%'
   OR authors.name LIKE '%' || ? || '%'
   OR museum_item.description LIKE '%' || ? || '%'
   OR museum_item.location LIKE '%' || ? || '%';

-- Locale-aware search for Romanian
searchByNameRo:
SELECT museum_item.* FROM museum_item
LEFT JOIN authors ON museum_item.author = authors.name
WHERE COALESCE(museum_item.paintingname_ro, museum_item.paintingname) LIKE '%' || ? || '%'
   OR COALESCE(authors.name_ro, authors.name) LIKE '%' || ? || '%'
   OR COALESCE(museum_item.description_ro, museum_item.description) LIKE '%' || ? || '%'
   OR museum_item.location LIKE '%' || ? || '%';

